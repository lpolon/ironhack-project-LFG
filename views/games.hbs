<div class="page">
  <nav class="menu">
    <ul class="menu__list">
      <!--Adicionar photo de perfil.-->
      <li class="menu__group"><img id="perfilphoto" src="/image/batman_hero_avatar_comics-512.png" alt="some text"></li>
      <li class="menu__group"><a href="/{{resObj.username}}" class="menu__link username">{{resObj.username}}</a></li>
      <li class="menu__group"><a href='{{resObj.username}}/games' class="menu__link">My games</a></li>
      <li class="menu__group"><a href="/logout" class="menu__link">logout</a></li>
    </ul>
  </nav>
</div>
<div class="bodyuserfindgames">

 
{{#if resObj.status}}
<h1>{{resObj.statusMsg}}</h1>
{{/if}}

<div class="container">
  <div class="row mb-5">
  {{#each resObj}}
  <div class="col-md-4">
    <div class="card text-center mb-3">
      <img class="card-img-top" src="{{img_url}}" alt="Card image game">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        {{#each platforms}}
          <p class="card-text">{{name}}</p>
        {{/each}}
          <a href="./{{@root.resObj.username}}/games/{{_id}}/add"><button class="btn btn-outline-success" type="submit">Add Game</button></a>
      </div>
    </div>
    </div>
  {{/each}}
  </div>
</div>
</div>