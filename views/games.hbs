<div class="bodyuser">

 
{{#if resObj.status}}
<h1>{{resObj.statusMsg}}</h1>
{{/if}}

<div class="container">
  <div class="row mb-5">
  {{#each resObj}}
  <div class="col-md-4">
    <div class="card text-center mb-3">
      <img class="card-img-top" src="{{img_url}}" alt="Card image game">
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        {{#each platforms}}
          <p class="card-text">{{name}}</p>
        {{/each}}
        <button type="submit">
          <a href="games/{{_id}}/add">add Game</a>
        </button>
      </div>
    </div>
    </div>
  {{/each}}
  </div>
</div>
